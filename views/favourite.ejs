<%- include("./partials/header", {title: "Favourites" }) %>



	<!-- Cart Start -->
	<div class="container-fluid pt-5 mt-5">
		<div class="row px-xl-5">
			<div class="col-lg-12 table-responsive mb-5">
				<table class="table table-bordered text-center mb-0">
					<thead class="bg-secondary text-dark">
						<tr>
							<th>Product</th>
							<th>Name</th>
							<th>Price</th>
							<th>Remove</th>
						</tr>
					</thead>
					<tbody class="align-middle">
						<% for(let one of products) {%>
							<tr>
								<td class="align-middle"><a href="http://localhost:3000/product/<%= one.pro_title %>/<%= one.pro_id %>"><img src="/img/product_imgs/<%= one.pro_img %>"
									style="width: 50px;" /></a></td>
								<td class="align-middle">
									<a href="http://localhost:3000/product/<%= one.pro_title %>/<%= one.pro_id %>">
										<%= one.pro_title %>
									</a>
								</td>
								<td class="align-middle"><span>$</span><span><%= one.s_price %>
									</span></td>

								<td class="align-middle"><a href="/remove-pro-from-fav/<%= one._id %>"
										class="btn btn-sm btn-primary removeProFromCart" id="<%= one._id %>"><i
											class="fa fa-times"></i></a></td>
							</tr>
							<% } %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
	<!-- Cart End -->


	<%- include("./partials/footer") %>